<?xml version='1.0'?>

<robot name="my_robot" 
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- PLUGINS -->
    <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

    <!-- PROPERTIES -->
    <xacro:property name="wheel_width" value="0.06" />
    <xacro:property name="wheel_rad" value="0.1" />
    <xacro:property name="wheel_forward_offset" value="0.13" />
    <xacro:property name="wheel_left_offset" value="0.15" />
    <xacro:property name="wheel_friction" value="0.3" />

    <link name="robot_footprint"></link>

    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="robot_footprint"/>
        <child link="chassis" />
    </joint>

    <link name='chassis'>
        <!-- <pose>0 0 0.1 0 0 0</pose> -->

        <inertial>
            <mass value="15.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>

        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .22 .12"/>
            </geometry>
        </collision>

        <visual name='chassis_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .22 .12"/>
            </geometry>
        </visual>
    </link>

    <!-- WHEELS - - - - - - - - -->
    <link name="front_left_wheel">
        <visual name="front_left_wheel_visual">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </visual>
        <collision name="front_left_wheel_collision">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0" rpy="0 1.5707 1.5707"/>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <!-- Feature to see wheel rotating -->
        <visual name='front_left_wheel_bump'>
            <origin xyz="0.05 0.03 0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </visual>
    </link>
    <link name="front_right_wheel">
        <!-- <pose>0 0 0 0 1.5707 1.5707</pose> -->
        <visual name="front_right_wheel_visual">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </visual>
        <collision name="front_right_wheel_collision">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0" rpy="00 1.5707 1.5707"/>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <!-- Feature to see wheel rotating -->
        <visual name='front_right_wheel_bump'>
            <origin xyz="0.05 -0.03 0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </visual>
    </link>
    <link name="back_left_wheel">
        <visual name="back_left_wheel_visual">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </visual>
        <collision name="back_left_wheel_collision">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0" rpy="0 1.5707 1.5707"/>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <!-- Feature to see wheel rotating -->
        <visual name='back_right_wheel_bump'>
            <origin xyz="0.05 0.03 0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </visual>
    </link>
    <link name="back_right_wheel">
        <!-- <pose>0 0 0 0 1.5707 1.5707</pose> -->
        <visual name="back_right_wheel_visual">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </visual>
        <collision name="back_right_wheel_collision">
            <geometry>
                <cylinder radius="${wheel_rad}" length="${wheel_width}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0 1.5707 1.5707"/>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0" rpy="00 1.5707 1.5707"/>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <!-- Feature to see wheel rotating -->
        <visual name='front_right_wheel_bump'>
            <origin xyz="0.05 -0.03 0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </visual>
    </link>

    <joint type="continuous" name="front_left_wheel_joint">
        <origin xyz="${wheel_forward_offset} ${wheel_left_offset} 0" rpy="0 0 0"/>
        <child link="front_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="${wheel_friction}"/>
    </joint>
    <joint type="continuous" name="front_right_wheel_joint">
        <origin xyz="${wheel_forward_offset} -${wheel_left_offset} 0" rpy="0 0 0"/>
        <child link="front_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="${wheel_friction}"/>
    </joint>
    <joint type="continuous" name="back_left_wheel_joint">
        <origin xyz="-${wheel_forward_offset} ${wheel_left_offset} 0" rpy="0 0 0"/>
        <child link="back_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="${wheel_friction}"/>
    </joint>
    <joint type="continuous" name="back_right_wheel_joint">
        <origin xyz="-${wheel_forward_offset} -${wheel_left_offset} 0" rpy="0 0 0"/>
        <child link="back_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="${wheel_friction}"/>
    </joint>

    <transmission name="front_left_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="front_left_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="front_left_wheel_actuator">
            <!-- <mechanicalReduction>7</mechanicalReduction> -->
        </actuator>
    </transmission>
    <transmission name="front_right_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="front_right_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="front_right_wheel_actuator">
            <!-- <mechanicalReduction>7</mechanicalReduction> -->
        </actuator>
    </transmission>
    <transmission name="back_left_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="back_left_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="back_left_wheel_actuator">
            <!-- <mechanicalReduction>7</mechanicalReduction> -->
        </actuator>
    </transmission>
    <transmission name="back_right_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="back_right_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="back_right_wheel_actuator">
            <!-- <mechanicalReduction>7</mechanicalReduction> -->
        </actuator>
    </transmission>

    <!-- SENSORS - - - - - - - - -->
    <link name="camera">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
        <visual name="camera_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision name="camera_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <friction>
            <ode>
                <mu>0.1</mu>
                <mu2>0.1</mu2>
            </ode>
            </friction>
        </collision>
    </link>
    <joint name="camera_joint" type="fixed">
        <origin xyz="0.2 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="camera"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="hokuyo">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1e-5"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://my_robot/meshes/hokuyo.dae" />
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>
    </link>
    <joint name="hokuyo_joint" type="fixed">
        <origin xyz="0.15 0.0 0.1" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="hokuyo"/>
        <axis xyz="0 1 0"/>

    </joint>

    <!-- COLORS - - - - - - - - -->
    <gazebo reference="left_wheel">
        <material>Gazebo/Turquoise</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Turquoise</material>
    </gazebo>
    <gazebo reference="chassis">
        <material>Gazebo/SkyBlue</material>
    </gazebo>
</robot>
